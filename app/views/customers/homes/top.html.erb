<div class="container">
  <div class="row">
	<div class="col-xs-1">
	</div>
	<div class="col-xs-2">
	  <table border="1">
	  	<br><br><br>
		<tr>
		  <th>
		  <h3>ジャンル検索</h3>
		  </th>
		</tr>
	  	<tr>
	  	  <td>
	  	  	<% @genre.each do |genre| %>
	  	  	<h3><%=link_to genre.name, search_path(genre) %></h3>
	  	  	<% end %>
	  	  </td>
	  	</tr>
	  </table>
	  <h3>検索</h3>

	  <%= form_tag(root_path, method: :get) do %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Search', name: nil %>
	  <% end %>
	</div>


	<div class="col-xs-8">
	  <div class="bgimg">
        <% if end_user_signed_in? %>
	  	  ようこそカスタムダイヤモンドオーダーサイトへ！<br>
	  	<% else %>
	  	  ようこそカスタムダイヤモンドオーダーサイトへ！<br>
	  	  会員でない方も商品の閲覧はできますが、<br>
	  	  購入には会員登録が必要になります。<br>
	  	<% end %>
	  </div>
	  <%= image_tag 'home.index.jpg', size: "760x200" %>
	  <strong><h2>オススメ商品</h2></strong>
	  	<table>
	  	  <tbody>
	  	<% @items.each do |item| %>
	  	<td>
	  	<div class="topbox">
		  	<%= link_to item_path(item) do %>
		  		<%= attachment_image_tag item, :image, size: "150x150" %>
		  	<% end %>
			</div><br>
			<div class="name" align="center">
		  	<%= link_to item_path(item) do %>
		  		<%= item.name %><br>
		  		¥<%= (item.non_taxed_price).floor.to_s(:delimited) %>
		  	</div><br>
		  	<% end %>
	  	<% end %>
		</td>
		  </tbody>
		</table>
		<p align="right"><%= link_to "もっと見る", items_path %></p>
	</div>
  </div>
</div>
